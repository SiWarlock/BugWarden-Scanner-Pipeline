# VulnHunter Environment Configuration

# API Keys
VULNHUNTER_ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Paths (relative to project root)
VULNHUNTER_CACHE_DIR=.vulnhunter_cache
VULNHUNTER_RESULTS_DIR=results
VULNHUNTER_TEMP_DIR=/tmp/vulnhunter

# Docker Configuration
VULNHUNTER_DOCKER_NETWORK=vulnhunter_net
VULNHUNTER_USE_GPU=false

# Performance Settings
VULNHUNTER_MAX_WORKERS=4
VULNHUNTER_WORKER_TIMEOUT=3600

# Logging
VULNHUNTER_LOG_LEVEL=INFO
VULNHUNTER_LOG_FORMAT=json

# Tool Timeouts (in seconds)
VULNHUNTER_TOOLS__SLITHER__TIMEOUT=300
VULNHUNTER_TOOLS__MYTHRIL__TIMEOUT=600
VULNHUNTER_TOOLS__ECHIDNA__TIMEOUT=900
VULNHUNTER_TOOLS__MANTICORE__TIMEOUT=1200

# Solidity Compiler Version
SOLC_VERSION=0.8.19

# External Services
VULNHUNTER_SWC_REGISTRY_URL=https://swcregistry.io/api/v1/
VULNHUNTER_SWC_CACHE_TTL=86400